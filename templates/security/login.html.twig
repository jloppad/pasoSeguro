{% extends 'layout.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}
{% block header %}{% endblock %}
{% block body %}
    <div class="container">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <img src="{{ asset('img/logo_recortado.png') }}" alt="logo" class="logo">
        <div class="login-container">
            <h1>Inicio de Sesión</h1>
            <form method="post" class="form">
                <div class="form-group">
                    <label for="username"></label><input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Usuario" class="form-control" {% if not last_username %}autofocus{% endif %}>
                </div>
                <div class="form-group">
                    <label for="password"></label><input type="password" id="password" name="_password" placeholder="Contraseña" class="form-control" {% if last_username %}autofocus{% endif %}>
                </div>
                <button type="submit">Entrar</button>
            </form>
        </div>
    </div>
{% endblock %}
