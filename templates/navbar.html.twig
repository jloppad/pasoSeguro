{% set current_path = app.request.get('_route') %}
<nav class="navbar">
    <div class="left">
        {% if is_granted('ROLE_CONSERJE') %}
            <a href="{{ path('exterior') }}" class="{{ current_path == 'exterior' ? 'active' : '' }}">Listado Exterior</a>
        {% endif %}
        {% if is_granted('ROLE_DOCENTE') %}
            <a href="{{ path('curso') }}" class="{{ current_path == 'curso' ? 'active' : '' }}">Listado de Curso</a>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('registro') }}" class="{{ current_path == 'registro' ? 'active' : '' }}">Registro</a>
        {% endif %}
    </div>
    <div class="middle">
        <img src="{{ asset('/img/logo_recortado.png') }}" alt="logo">
        <p>Paso Seguro</p>
    </div>
    <div class="right">
        <ul>
            {% if app.user %}
                <li>
                    <p><i class="fa-solid fa-user-tie"></i>  Conectado como {{ app.user.userName }}</p>
                </li>
                <li>
                    <a href="{{ path('app_logout') }}"> <i class="fa-solid fa-right-from-bracket"></i>  Cerrar Sesi√≥n</a>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>
